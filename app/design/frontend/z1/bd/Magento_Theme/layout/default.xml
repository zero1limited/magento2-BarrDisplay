<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="header.panel" destination="header-wrapper" after="logo" />
        <referenceContainer name="header.panel">
            <block class="Magento\Framework\View\Element\Template" name="header_tel" template="Magento_Theme::header-tel.phtml" />
        </referenceContainer>

        <referenceContainer name="header-wrapper">
            <block class="Magento\Theme\Block\Html\Header\Logo" name="logo">
                <arguments>
                    <argument name="logo_img_width" xsi:type="number">282</argument>
                    <argument name="logo_img_height" xsi:type="number">78</argument>
                </arguments>
            </block>
        </referenceContainer>
		
		<referenceBlock name="catalog.topnav">
			<!-- add extra nav here for selected categories? -->
			<block class="Magento\Catalog\Block\Navigation" name="highlights" template="Magento_Theme::html/topmenu-highlights.phtml"/>
		</referenceBlock>
        
        <referenceContainer name="top.container">
        	<!-- Header KSPs -->
			<container name="header.usps.wrapper" htmlClass="ksps" htmlTag="div" before="-">
                <block class="Magento\Framework\View\Element\Template" name="ksps" template="Magento_Theme::ksps.phtml"/>
            </container>
		</referenceContainer>
		
		<referenceBlock name="my-account-link">
            <arguments>
            	<argument name="class" xsi:type="string">my-account-link</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="top.links">
            <referenceBlock name="register-link" remove="true" />
            <referenceBlock name="wish-list-link" remove="true" />
            <referenceBlock name="catalog.compare.link" remove="true"/>
            <referenceBlock name="authorization-link" remove="true"/>
            <!--<referenceBlock name="my-account-link" remove="true" />-->
            <!-- this is just the welcome message, confusing block name -->
            <referenceBlock name="header" remove="true"/>
            <!-- Custom Links -->
            <block class="Magento\Framework\View\Element\Html\Link" name="blog-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Blog</argument>
                    <argument name="path" xsi:type="string">blog</argument>
                    <argument name="class" xsi:type="string">blog-link</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link" name="contact-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Contact Us</argument>
                    <argument name="path" xsi:type="string">contact</argument>
                    <argument name="class" xsi:type="string">contact-link</argument>
                </arguments>
            </block>
        </referenceBlock>
        
        <!-- Blocks added to the menu -->
        <referenceBlock name="store.menu">
            <!--<block class="Magento\Framework\View\Element\Template" name="after.nav" template="Magento_Theme::nav-after.phtml" after="catalog.topnav"/>-->
        </referenceBlock>

        <referenceContainer name="footer">
            <referenceBlock name="report.bugs" remove="true" />
            <referenceBlock name="footer_links" remove="true" />
            <block class="Magento\Cms\Block\Block" name="footer_links_custom">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer_links_custom</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="footer_links_social">
                <arguments>
                    <argument name="block_id" xsi:type="string">footer_links_social</argument>
                </arguments>
            </block>
        </referenceContainer>
        
        <move element="copyright" destination="before.body.end" before="-"/>
        <referenceContainer name="before.body.end">
        	<!--<block class="Magento\Framework\View\Element\Template" name="nav.blocks" template="Magento_Theme::nav-blocks.phtml"/>-->
        </referenceContainer>	
    </body>
</page>